@import url(https://fonts.googleapis.com/css?family=Slackey);


body{
  font-size: 30px;
  font-family: 'Slackey';
  color: #333;
  font-weight: 300;
  text-align: center;
  background-image: url('background.png');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
}
h1{
  font-weight: 300;
  margin: 0px;
  padding: 20px;
  font-size: 40px;
  background-color: #DAA520;
  color: #F0E68C;
}

/* unvisited link */
a:link {
  color: #F0E68C;
  text-decoration: none;
}

/* visited link */
a:visited {
  color: #F0E68C;
  text-decoration: none;
}

.question{
  font-size: 30px;
  margin-bottom: 20px;
}
.answers {
  margin-bottom: 0px;
  text-align: left;
  display: inline-block;
}
.answers label{
  display: block;
  margin-bottom: 20px;
}
button{
  font-family: 'Slackey', sans-serif;
	font-size: 22px;
	background-color: #279;
	color: #fff;
	border: 0px;
	border-radius: 7px;
	padding: 30px;
	cursor: pointer;
	margin-bottom: 0px;
}
button:hover{
	background-color: #38a;
}


.slide{
  position: absolute;
  left: 300px;
  top: 0px;
  width: 60%;
  z-index: 1;
  opacity: 0;
  transition: opacity 0.5s;
}
.active-slide{
  opacity: 1;
  z-index: 2;
}
.quiz-container{
  position: relative;
  height: 350px;
  margin-top: 50px;
  margin-bottom: 80px;
}

.sidebar {
height: 100%;
width: 250px;
position: absolute;
top: 0;
padding-top: 35px;
background-color: #DAA520;
color: #F0E68C;
}

.sidebar div {
padding: 10px;
font-size: 24px;
display: block;
}
